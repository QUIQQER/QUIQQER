<?xml version="1.0" encoding="UTF-8"?>
<database>

    <global>

        <table name="users">
            <field type="INT(11) NOT NULL AUTO_INCREMENT">id</field>
            <field type="VARCHAR(50) NOT NULL DEFAULT ''">username</field>
            <field type="VARCHAR(50) NOT NULL DEFAULT ''">password</field>
            <field type="TEXT NOT NULL DEFAULT">usergroup</field>
            <field type="VARCHAR(50) DEFAULT NULL">email</field>
            <field type="INT(1) NOT NULL DEFAULT '0'">active</field>
            <field type="INT(11) NOT NULL DEFAULT '0'">regdate</field>
            <field type="INT(11) NOT NULL DEFAULT '0'">lastvisit</field>
            <field type="TINYINT(1) NOT NULL">lastvisit</field>
            <field type="TIMESTAMP NULL DEFAULT '0000-00-00 00:00:00'">expire</field>
            <field type="TIMESTAMP NOT NULL DEFAULT '0000-00-00 00:00:00'">lastedit</field>
            <field type="TEXT NOT NULL">user_agent</field>

            <primary>id</primary>
            <index>username,password</index>
        </table>

        <table name="groups">
            <field type="INT(11) NOT NULL">id</field>
            <field type="VARCHAR(50) NOT NULL">name</field>
            <field type="TINYINT(2) NOT NULL">admin</field>
            <field type="INT(11) NOT NULL">parent</field>
            <field type="TINYINT(1) NOT NULL">active</field>
            <field type="VARCHAR(128)">toolbar</field>

            <primary>id</primary>
            <index>parent</index>
        </table>

        <table name="permissions2groups">
            <field type="INT(11) NOT NULL">group_id</field>
            <field type="TEXT">permissions</field>
        </table>

        <table name="sessions">
            <field type="VARCHAR(255) NOT NULL">session_id</field>
            <field type="TEXT NOT NULL">session_value</field>
            <field type="INT(11) NOT NULL">session_time</field>
            <field type="INT(11) NOT NULL">session_lifetime</field>

            <primary>session_id</primary>
        </table>

    </global>

</database>
