<?xml version="1.0" encoding="UTF-8"?>
<site>

    <!-- global extra attributes for all sites -->
    <attributes>
        <attribute default="10">attribute.one</attribute>
        <attribute>attribute.two</attribute>
    </attributes>

    <types>
        <type
                type=""
                icon=""
                template=""
                cache=""
        >
            <!-- extend only the panel for the type -->
            <tab name="">
                <text>Text</text>
                <image>Image</image>
            </tab>

            <!-- tab with locale -->
            <tab name="">
                <text>
                    <locale group="" var=""/>
                </text>
                <image>Icon</image>
            </tab>

            <!-- tab with xml catgeries -->
            <tab name="">
                <text>Text</text>
                <image>Icon</image>

                <categories>
                    <category>
                        <settings>
                            <title>
                                <locale group="" var=""/>
                            </title>

                            <input conf="" data-qui="">
                                <text>
                                    <locale group="" var=""/>
                                </text>
                            </input>
                        </settings>
                    </category>
                </categories>
            </tab>
        </type>

        <type
                type=""
                extend=""
                icon=""
                template=""
        />

        <!-- Type with locale translation -->
        <type type="" extend="" icon="">
            <locale group="" var=""/>
        </type>

        <!-- Type with own settings -->
        <type type="" extend="" icon="">
            <locale group="" var=""/>
            <desc>
                <locale group="" var=""/>
            </desc>

            <attributes>
                <attribute>attribute.name</attribute>
            </attributes>

            <settings>
                <category name="">
                    <settings>
                        <title>
                            <locale group="" var=""/>
                        </title>

                        <input conf="" type="">
                            <text>
                                <locale group="" var=""/>
                            </text>
                        </input>
                    </settings>
                </category>
            </settings>
        </type>

        <type type="another/module:another/type">
            <!-- tab with xml categories -->
            <tab name="">
                <text>Title</text>
                <image>Image</image>

                <categories>
                    <category>
                        <settings>
                            <!-- Settings here -->
                        </settings>
                    </category>
                </categories>
            </tab>
        </type>

    </types>

    <!-- extend every panel -->
    <window>
        <tab name="">
            <text>Text</text>
            <image>Image</image>
        </tab>
    </window>

    <!-- extend every panel -->
    <window>
        <tab name="">
            <text>Text</text>
            <image>Image</image>

            <categories>
                <category>
                    <settings>
                        <title>
                            <locale group="" var=""/>
                        </title>

                        <input conf="" data-qui="">
                            <text>
                                <locale group="" var=""/>
                            </text>
                        </input>
                    </settings>
                </category>
            </categories>
        </tab>
    </window>
</site>
