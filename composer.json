{
    "name" : "quiqqer/quiqqer",
    "type" : "quiqqer-system",
    "description" : "A modular based management system written in JavaScript and PHP",
    "version" : "1.0.0",
    "license" : "GPL-3.0+",

    "authors" : [{
        "name": "Henning Leutz",
        "email": "leutz@pcsg.de",
        "homepage": "http://www.pcsg.de",
        "role": "Developer"
    }, {
        "name": "Moritz Scholz",
        "email": "scholz@pcsg.de",
        "homepage": "http://www.pcsg.de",
        "role": "Developer"
    }],

    "support" : {
        "email": "support@pcsg.de",
        "url": "http://www.quiqqer.com"
    },

    "repositories": [{
        "type": "composer",
        "url": "http://update.quiqqer.com"
    }, {
        "packagist": false
    }],

    "require": {
        "php" : ">=5.3",
        "phpmailer/phpmailer" : "dev-master",
        "quiqqer/smarty": "3.1.12",
        "quiqqer/smarty3" : "dev-master",
        "quiqqer/ckeditor3" : "1.*",
        "quiqqer/calendar" : "dev-master",
        "quiqqer/colorpicker" : "dev-master",
        "quiqqer/translator" : "dev-master",
        "quiqqer/history" : "1.*"
    },

    "config": {
        "vendor-dir": "packages",
        "cache-dir" : "var/composer"
    },

    "scripts": {
        "post-install-cmd" : [
            "QUI\\Update::onInstall"
        ],

        "post-update-cmd": [
            "QUI\\Update::onUpdate"
        ]
    },

    "autoload": {
        "psr-0" : {
            "QUI" : "lib/"
        }
    }
}
