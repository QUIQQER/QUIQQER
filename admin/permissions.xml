<?xml version="1.0" encoding="UTF-8"?>
<permissions>

    <!-- standard quiqqer permissions -->
    <permission name="quiqqer.admin" type="bool">
        <title group="quiqqer/system" var="right.is.admin">
            Darf in den Adminbereich
        </title>
    </permission>
    <permission name="quiqqer.su" type="bool">
        <title group="quiqqer/system" var="right.system.cache">
            Ist Super-User
        </title>
        <description>Darf Super-User bearbeiten / erstellen</description>
    </permission>

    <permission name="quiqqer.system.update" type="bool">
        <title group="quiqqer/system" var="right.system.update">
            Darf Updates durchführen
        </title>
    </permission>
    <permission name="quiqqer.system.permissions" type="bool">
        <title group="quiqqer/system" var="right.system.permissions">
            Darf Zugrifssrechte verwalten
        </title>
    </permission>
    <permission name="quiqqer.system.cache" type="bool">
        <title group="quiqqer/system" var="right.system.cache">
            Darf Cache löschen
        </title>
    </permission>

    <permission name="quiqqer.admin.groups.view" type="bool">
        <title group="quiqqer/system" var="right.groups.view">
            Darf die Gruppenverwaltung sehen
        </title>
    </permission>
    <permission name="quiqqer.admin.groups.edit" type="bool">
        <title group="quiqqer/system" var="right.groups.edit">
            Darf Gruppen editieren
        </title>
    </permission>

    <permission name="quiqqer.admin.users.view" type="bool">
        <title group="quiqqer/system" var="right.users.view">
            Darf die Benutzerverwaltung sehen
        </title>
    </permission>
    <permission name="quiqqer.admin.users.edit" type="bool">
        <title group="quiqqer/system" var="right.users.edit">
            Darf Benutzer editieren
        </title>
    </permission>
    <permission name="quiqqer.admin.projects.create" type="bool">
        <title group="quiqqer/system" var="right.projects.create">
            Darf Projekte anlegen
        </title>
    </permission>

    <!-- Um locale nun anzulegen wäre dies: -->
