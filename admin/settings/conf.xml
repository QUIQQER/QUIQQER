<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <settings>

        <config name="conf">

            <section name="globals">
                <conf name="cms_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="lib_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="bin_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="var_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="usr_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="sys_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="opt_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="pkg_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="url_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="salt">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="saltlength">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="rootuser">
                    <type><![CDATA[integer]]></type>
                </conf>
                <conf name="root">
                    <type><![CDATA[integer]]></type>
                </conf>
                <conf name="system_changed">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="debug_mode">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="quiqqer_version">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>master-dev</defaultvalue>
                </conf>
                <conf name="mailprotection">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="cache">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="development">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="emaillogin">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="maintenance">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>

                <conf name="host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="httpshost">
                    <type><![CDATA[string]]></type>
                </conf>

                <conf name="timezone">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>Europe/Berlin</defaultvalue>
                </conf>
                <conf name="standardLanguage">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>en</defaultvalue>
                </conf>
                <conf name="htmlSuffix">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="db">
                <conf name="driver">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="database">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="user">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="password">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="mail">
                <conf name="queue">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="admin_mail">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTP">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPServer">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPPort">
                    <type><![CDATA[number]]></type>
                </conf>
                <conf name="SMTPAuth">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPUser">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPPass">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPSecure">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPSecureSSL_verify_peer">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPSecureSSL_verify_peer_name">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPSecureSSL_allow_self_signed">
                    <type><![CDATA[bool]]></type>
                </conf>

                <conf name="MAILFrom">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="MAILFromText">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="MAILReplyTo">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="session">
                <conf name="type">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>filesystem</defaultvalue>
                </conf>
                <conf name="multible">
                    <type><![CDATA[boolean]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="max_life_time">
                    <type><![CDATA[integer]]></type>
                    <defaultvalue>14000</defaultvalue>
                </conf>
                <conf name="memcached_data">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="memcache_data">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="error">
                <conf name="mail">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="send">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="log404">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="mysql_ajax_errors_frontend">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="mysql_ajax_errors_backend">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="auth">
                <conf name="type">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>standard</defaultvalue>
                </conf>
            </section>

            <section name="template">
                <conf name="engine">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>smarty3</defaultvalue>
                </conf>
            </section>

            <section name="smarty">
                <conf name="compile_check">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="date_formats">
                <conf name="??">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="gui">
                <conf name="displayTimeMessages">
                    <type><![CDATA[integer]]></type>
                    <defaultvalue>2500</defaultvalue>
                </conf>
            </section>

        </config>

        <window menu-parent="/settings/quiqqer/">
            <title>
                <locale group="quiqqer/system" var="quiqqer.settings.title"/>
            </title>
            <params>
                <icon>URL_BIN_DIR/16x16/quiqqer.png</icon>
            </params>

            <categories>
                <category name="settings" require="controls/system/settings/Config" index="1">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.general.title"/>
                    </text>
                    <icon>URL_BIN_DIR/22x22/quiqqer.png</icon>
                    <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system"
                                    var="quiqqer.settings.general.globals.title"
                            />
                        </title>
                        <input conf="globals.htmlSuffix" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.htmlSuffix"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.general.globals.htmlSuffix.description"/>
                            </description>
                        </input>
                        <input conf="globals.mailprotection" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.mailprotection"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.general.globals.mailprotection.description"/>
                            </description>
                        </input>
                    </settings>

                    <settings title="templateengine" name="templateengine">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.template.title"/>
                        </title>
                        <input conf="template.engine" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.template.use"/>
                            </text>
                        </input>
                        <input conf="smarty.compile_check" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.template.compilecheck"/>
                            </text>
                        </input>
                    </settings>

                    <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.dev.title"/>
                        </title>
                        <input conf="globals.maintenance" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.maintenance"/>
                            </text>
                        </input>
                        <input conf="globals.debug_mode" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.debug"/>
                            </text>
                        </input>
                        <input conf="globals.development" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.development"/>
                            </text>
                        </input>
                    </settings>

                    <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.updates.title"/>
                        </title>
                        <select conf="globals.quiqqer_version">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.version.title"/>
                            </text>
                        </select>
                    </settings>
                </category>

                <category name="mail" require="controls/system/settings/Mail" index="2">
                    <text>
                        <locale group="quiqqer/system" var="email"/>
                    </text>
                    <icon>fa fa-envelope-o</icon>

                    <settings title="mail" name="mail">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.title"/>
                        </title>
                        <input conf="mail.admin_mail" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.admin"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.admin.desc"/>
                            </description>
                        </input>
                        <input conf="mail.MAILFrom" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFrom"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.email.smtp.auth.MAILFrom.description"/>
                            </description>
                        </input>
                        <input conf="mail.MAILFromText" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFromText"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.email.smtp.auth.MAILFromText.description"/>
                            </description>
                        </input>
                        <input conf="mail.MAILReplyTo" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILReplyTo"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.email.smtp.auth.MAILReplyTo.description"/>
                            </description>
                        </input>
                        <input conf="mail.queue" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.queue"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.queue.desc"/>
                            </description>
                        </input>
                    </settings>

                    <settings title="smtp" name="smtp">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.title"/>
                        </title>
                        <input conf="mail.SMTP" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.activasion"/>
                            </text>
                        </input>
                        <input conf="mail.SMTPServer" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.server"/>
                            </text>
                        </input>
                        <input conf="mail.SMTPPort" type="number">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.port"/>
                            </text>
                        </input>

                        <select conf="mail.SMTPSecure">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.secure"/>
                            </text>
                            <option value="">---</option>
                            <option value="ssl">SSL</option>
                            <option value="tls">TLS</option>
                        </select>
                    </settings>

                    <settings title="smtp" name="smtp">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.title"/>
                        </title>
                        <input conf="mail.SMTPAuth" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.activasion"/>
                            </text>
                        </input>
                        <input conf="mail.SMTPUser" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.user"/>
                            </text>
                        </input>
                        <input conf="mail.SMTPPass" type="password">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.password"/>
                            </text>
                        </input>
                    </settings>
                </category>

                <category name="auth" require="controls/system/settings/Auth" index="3">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.auth"/>
                    </text>
                    <icon>fa fa-user</icon>

                    <settings title="auth" name="auth">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth"/>
                        </title>

                        <input conf="globals.emaillogin" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.emaillogin"/>
                            </text>
                        </input>
                        <select conf="auth.type" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.type"/>
                            </text>

                            <option value="standard">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.standard"/>
                            </option>
                        </select>
                    </settings>

                    <settings title="auth-session" name="auth-session">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.session"/>
                        </title>

                        <input conf="session.multible" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.session.multible"/>
                            </text>
                        </input>

                        <input conf="session.max_life_time">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.session.maxlife"/>
                            </text>
                        </input>

                        <select conf="session.type" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.session.type"/>
                            </text>

                            <option value="filesystem">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.sessionType.filesystem"/>
                            </option>
                            <option value="database">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.sessionType.database"/>
                            </option>
                            <option value="memcached">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.sessionType.memcached"/>
                            </option>
                            <!--<option value="mongodb">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.sessionType.mongodb" />
                            </option>-->
                        </select>


                        <input conf="session.memcached_data" type="hidden"/>
                    </settings>

                </category>

                <category name="language_settings" index="4">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.language_settings"/>
                    </text>
                    <icon>fa fa-calendar</icon>

                    <settings title="languages" name="languages">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.languages.title"/>
                        </title>
                        <input conf="globals.standardLanguage" type="string" data-qui="controls/lang/Select">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.standardLanguage"/>
                            </text>
                        </input>
                    </settings>

                    <settings title="date_timezone" name="date_timezone">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.timezone.title"/>
                        </title>
                        <input conf="globals.timezone" type="string">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.timezone"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.general.globals.timezone.description"/>
                            </description>
                        </input>
                    </settings>

                    <settings title="date_formats" name="date_formats">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.date_formats.title"/>
                        </title>

                        <input conf="date_formats"
                               data-qui="controls/system/AvailableLanguages"
                        >
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.date_formats.description"/>
                            </description>
                        </input>
                    </settings>

                    <settings title="delimiter_formats" name="delimiter_formats">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.delimiter_formats.title"/>
                        </title>

                        <input data-qui="controls/system/settings/FormatSettings" />
                    </settings>
                </category>

                <category name="gui" index="5">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.gui"/>
                    </text>
                    <icon>fa fa-user</icon>

                    <settings title="gui" name="gui">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.gui.title"/>
                        </title>

                        <input conf="gui.displayTimeMessages" type="number">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.gui.displayTimeMessages.text"/>
                            </text>
                            <description>
                                <locale group="quiqqer/system"
                                        var="quiqqer.settings.gui.displayTimeMessages.description"/>
                            </description>
                        </input>
                    </settings>
                </category>

            </categories>
        </window>
    </settings>
</quiqqer>