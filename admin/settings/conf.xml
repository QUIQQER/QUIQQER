                <category name="mail">
                    <text>
                        <locale group="quiqqer/system" var="email" />
                    </text>
                    <icon>icon-envelope-alt</icon>

                    <settings title="mail" name="mail">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.title" />
                        </title>
                        <input conf="mail.admin_mail" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.admin" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.admin.desc" />
                            </description>
                        </input>
                        <input conf="mail.queue" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.queue" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.queue.desc" />
                            </description>
                        </input>
                    </settings>

                    <settings title="smtp" name="smtp">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.title" />
                        </title>
                        <input conf="mail.SMTP" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.activasion" />
                            </text>
                        </input>
                        <input conf="mail.SMTPServer" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.server" />
                            </text>
                        </input>
                    </settings>

                    <settings title="smtp" name="smtp">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.title" />
                        </title>
                        <input conf="mail.SMTPAuth" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.activasion" />
                            </text>
                        </input>
                        <input conf="mail.SMTPUser" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.user" />
                            </text>
                        </input>
                        <input conf="mail.SMTPPass" type="password">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.password" />
                            </text>
                        </input>
                        <input conf="mail.MAILFrom" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFrom" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFrom.description" />
                            </description>
                        </input>
                        <input conf="mail.MAILFromText" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFromText" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILFromText.description" />
                            </description>
                        </input>
                        <input conf="mail.MAILReplyTo" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILReplyTo" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.email.smtp.auth.MAILReplyTo.description" />
                            </description>
                        </input>
                    </settings>
                </category>

                <category name="auth">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.auth" />
                    </text>
                    <icon>icon-user</icon>

                    <settings title="auth" name="auth">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth" />
                        </title>

                        <input conf="globals.emaillogin" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.emaillogin" />
                            </text>
                        </input>
                        <select conf="auth.type" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.type" />
                            </text>
                            <option value="standard">
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.standard" />
                            </option>
                        </select>
                    </settings>

                    <settings title="auth-session" name="auth-session">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.session" />
                        </title>

                        <input conf="session.max_life_time">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.session.maxlife" />
                            </text>
                        </input>
                    </settings>

                    <settings title="auth-memcached" name="auth-memcached">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.memcached" />
                        </title>
                        <text>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.memcached.text" />
                        </text>
                        <input conf="session.memcached_host">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.memcached.host" />
                            </text>
                        </input>

                        <input conf="session.memcached_port">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.memcached.port" />
                            </text>
                        </input>
                    </settings>

                    <settings title="auth-memcache" name="auth-memcache">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.memcache" />
                        </title>
                        <text>
                            <locale group="quiqqer/system" var="quiqqer.settings.auth.memcache.text" />
                        </text>
                        <input conf="session.memcache_host">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.memcache.host" />
                            </text>
                        </input>

                        <input conf="session.memcache_port">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.auth.memcache.port" />
                            </text>
                        </input>
                    </settings>
                </category>

                <category name="date_formats">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.date_formats" />
                    </text>
                    <icon>icon-calendar</icon>


                    <settings title="date_timezone" name="date_timezone">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.timezone.title" />
                        </title>
                        <input conf="globals.timezone" type="string">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.timezone" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.timezone.description" />
                            </description>
                        </input>
                    </settings>

                    <settings title="date_formats" name="date_formats">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.date_formats.title" />
                        </title>

                        <input conf="date_formats"
                               data-qui="controls/system/AvailableLanguages"
                        >
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.date_formats.description" />
                            </description>
                        </input>
                    </settings>
                </category>

            </categories>
