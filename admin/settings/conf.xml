                </conf>
                <conf name="bin_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="var_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="usr_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="sys_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="opt_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="pkg_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="url_dir">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="salt">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="saltlength">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="rootuser">
                    <type><![CDATA[integer]]></type>
                </conf>
                <conf name="root">
                    <type><![CDATA[integer]]></type>
                </conf>
                <conf name="system_changed">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="debug_mode">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="quiqqer_version">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>master-dev</defaultvalue>
                </conf>
                <conf name="mailprotection">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="cache">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="development">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="emaillogin">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="maintenance">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>

                <conf name="host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="httpshost">
                    <type><![CDATA[string]]></type>
                </conf>

                <conf name="timezone">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>Europe/Zurich</defaultvalue>
                </conf>
            </section>

            <section name="db">
                <conf name="driver">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="database">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="user">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="password">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="mail">
                <conf name="queue">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="admin_mail">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTP">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPServer">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPAuth">
                    <type><![CDATA[bool]]></type>
                </conf>
                <conf name="SMTPUser">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="SMTPPass">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="MAILFrom">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="MAILFromText">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="MAILReplyTo">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>

            <section name="session">
                <conf name="max_life_time">
                    <type><![CDATA[integer]]></type>
                    <defaultvalue>14000</defaultvalue>
                </conf>
                <conf name="memcached_host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="memcached_port">
                    <type><![CDATA[integer]]></type>
                </conf>
                <conf name="memcache_host">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="memcache_port">
                    <type><![CDATA[integer]]></type>
                </conf>
            </section>

            <section name="error">
                <conf name="mail">
                    <type><![CDATA[string]]></type>
                </conf>
                <conf name="send">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="log404">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>1</defaultvalue>
                </conf>
                <conf name="mysql_ajax_errors_frontend">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
                <conf name="mysql_ajax_errors_backend">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="auth">
                <conf name="type">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>standard</defaultvalue>
                </conf>
            </section>

            <section name="template">
                <conf name="engine">
                    <type><![CDATA[string]]></type>
                    <defaultvalue>smarty3</defaultvalue>
                </conf>
            </section>

            <section name="smarty">
                <conf name="compile_check">
                    <type><![CDATA[bool]]></type>
                    <defaultvalue>0</defaultvalue>
                </conf>
            </section>

            <section name="date_formats">
                <conf name="??">
                    <type><![CDATA[string]]></type>
                </conf>
            </section>
        </config>

        <window menu-parent="/settings/quiqqer/">
            <title>
                <locale group="quiqqer/system" var="quiqqer.settings.title" />
            </title>
            <params>
                <icon>URL_BIN_DIR/16x16/quiqqer.png</icon>
            </params>

            <categories>
                <category name="settings" require="controls/system/settings/Config">
                    <text>
                        <locale group="quiqqer/system" var="quiqqer.settings.general.title" />
                    </text>
                    <icon>URL_BIN_DIR/22x22/quiqqer.png</icon>
                    <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system"
                                    var="quiqqer.settings.general.globals.title"
                            />
                        </title>
                        <input conf="globals.mailprotection" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.mailprotection" />
                            </text>
                            <description>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.globals.mailprotection.description" />
                            </description>
                        </input>
                    </settings>

                    <settings title="templateengine" name="templateengine">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.template.title" />
                        </title>
                        <input conf="template.engine" type="text">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.template.use" />
                            </text>
                        </input>
                        <input conf="smarty.compile_check" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.template.compilecheck" />
                            </text>
                        </input>
                    </settings>

                    <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.dev.title" />
                        </title>
                        <input conf="globals.maintenance" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.maintenance" />
                            </text>
                        </input>
                        <input conf="globals.debug_mode" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.debug" />
                            </text>
                        </input>
                        <input conf="globals.development" type="checkbox">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.dev.development" />
                            </text>
                        </input>
                    </settings>

                     <settings title="globals" name="globals">
                        <title>
                            <locale group="quiqqer/system" var="quiqqer.settings.general.updates.title" />
                        </title>
                        <select conf="globals.quiqqer_version">
                            <text>
                                <locale group="quiqqer/system" var="quiqqer.settings.general.version.title" />
                            </text>
                        </select>
                    </settings>
                </category>

