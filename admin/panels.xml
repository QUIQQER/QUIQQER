<?xml version="1.0" encoding="UTF-8"?>

<quiqqer>
    <panels>

        <!-- quiqqer projects panel -->
        <panel require="controls/projects/project/Panel">
            <image>fa fa-home</image>
            <title>
                <locale group="quiqqer/quiqqer" var="panels.project.title"/>
            </title>
            <text>
                <locale group="quiqqer/quiqqer" var="panels.project.description"/>
            </text>
        </panel>

        <!-- quiqqer Bookmarks -->
        <panel require="controls/desktop/panels/Bookmarks">
            <image>fa fa-bookmark</image>
            <title>
                <locale group="quiqqer/quiqqer" var="panels.bookmarks.title"/>
            </title>
            <text>
                <locale group="quiqqer/quiqqer" var="panels.bookmarks.description"/>
            </text>
        </panel>

        <!-- quiqqer Uploads -->
        <panel require="UploadManager">
            <image>fa fa-upload</image>
            <title>
                <locale group="quiqqer/quiqqer" var="panels.upload.title"/>
            </title>
            <text>
                <locale group="quiqqer/quiqqer" var="panels.upload.description"/>
            </text>
        </panel>

        <!-- qui message handler -->
        <panel require="qui/controls/messages/Panel">
            <image>fa fa-bullhorn</image>
            <title>
                <locale group="quiqqer/quiqqer" var="panels.messages.title"/>
            </title>
            <text>
                <locale group="quiqqer/quiqqer" var="panels.messages.description"/>
            </text>
        </panel>

        <!-- qui task panel -->
        <panel require="qui/controls/desktop/Tasks">
            <image>fa fa-tasks</image>
            <title>
                <locale group="quiqqer/quiqqer" var="panels.tasks.title"/>
            </title>
            <text>
                <locale group="quiqqer/quiqqer" var="panels.tasks.description"/>
            </text>
        </panel>

    </panels>
</quiqqer>
